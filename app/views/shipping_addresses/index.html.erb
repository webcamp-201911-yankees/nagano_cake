<div class="container">
    <h2>配送先登録/一覧</h2>
    <!-- <div class="row"> -->
    <%= form_for(@shipping_addressn) do |f| %>
    <h4>郵便番号</h4>
    <%= f.text_field :shipping_zipcode ,class:"col-xs"%>
    <h4>住所</h4>
    <%= f.text_field :shipping_address ,class:"col-xs"%>
    <h4>宛先</h4>
    <%= f.text_field :name ,class:"col-xs"%>
    <%= f.submit '登録する',class:"col-xs btn btn-primary"%>
    <% end %>
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛先</th>
                <th></th>
            </tr>
            <% @shipping_addresses.each do |shipping_addresses| %>
            <tr>
                <td>
                    <%=shipping_addresses.shipping_zipcode %>
                </td>
                <td>
                    <%=shipping_addresses.shipping_address %>
                </td>
                <td>
                    <%=shipping_addresses.name %>
                </td>
                <td>
                    <button type="button" class="btn btn-success btn-sm">
                        <%= link_to "edit", edit_shipping_address_path(shipping_addresses.id)%>
                    </button>
                    <button type="button" class="btn btn-success btn-sm">
                        <%= link_to "destroy", shipping_address_path(shipping_addresses.id), method: :delete %>
                    </button>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
