<%= render 'layouts/c_header' %>
<div class="container mt-5">
    <h4>登録情報編集</h4>
    <p>
        <%= link_to "退会する", customer_path(@customer.id), method: :delete, "data-confirm" => "本当に退会しますか？", class: "btn-sm btn-danger" %>
    </p>
    <%= form_for(@customer) do |f| %>
    <table border="1">
        <tr>
            <td class="text-center">氏名</td>
            <td class="text-center">
                <%= f.text_field :last_name %>
                <%= f.text_field :first_name %>
            </td>
        </tr>
        <tr>
            <td class="text-center">カナ</td>
            <td >
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
            </td>
        </tr>
        <tr>
            <td class="text-center">郵便番号</td>
            <td>
                <%= f.text_field :zipcode %>
            </td>
        </tr>
        <tr>
            <td class="text-center">住所</td>
            <td>
                <%= f.text_area :address %>
            </td>
        </tr>
        <tr>
            <td class="text-center">電話番号</td>
            <td>
                <%= f.text_field :phone_number %>
            </td>
        </tr>
        <tr>
            <td class="text-center">メールアドレス</td>
            <td>
                <%= f.email_field :email %>
            </td>
        </tr>
    </table>
    <%= f.submit "編集内容を保存する",class:"btn btn-sm btn-primary mt-2" %>
    <% end %>
</div>