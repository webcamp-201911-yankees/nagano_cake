<%= render 'layouts/c_header' %>
<div class="container">
    <h3>マイページ</h3>
    <h4>登録情報
        <%= link_to "編集する",edit_customer_path(@customer.id), class: 'btn btn-sm btn-primary' %>
        <%= link_to "パスワードを変更する",edit_customer_password_path(@customer.id), class: 'btn btn-sm btn-primary'%>
    </h4>
    <table border="1">
        <tr>
            <td>氏名</td>
            <td>
                <%= @customer.last_name %>
                <%= @customer.first_name %>
            </td>
        </tr>
        <tr>
            <td>カナ</td>
            <td>
                <%= @customer.last_name_kana %>
                <%= @customer.first_name_kana %>
            </td>
        </tr>
        <tr>
            <td>郵便番号</td>
            <td>
                <%= @customer.zipcode %>
            </td>
        </tr>
        <tr>
            <td>住所</td>
            <td>
                <%= @customer.address%>
            </td>
        </tr>
        <tr>
            <td>電話番号</td>
            <td>
                <%= @customer.phone_number%>
            </td>
        </tr>
        <tr>
            <td>メールアドレス</td>
            <td>
                <%= @customer.email%>
            </td>
        </tr>
    </table>
    <h4>配送先
        <%= link_to "一覧を見る",shipping_addresses_path,class: 'btn btn-sm btn-primary'%>
    </h4>
    <h4>注文履歴
        <%= link_to "一覧を見る",order_histories_path,class: 'btn btn-sm btn-primary'%>
    </h4>
</div>