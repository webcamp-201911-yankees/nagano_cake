<div class="container">
	<div class="row">

		<div class="main_visual">
			main_visual
		</div>

		<h2>商品一覧</h2>
		<table>
			<tbody>
				<% @products.each do |product| %>
				<tr>
					<td>
					<%= link_to product_path(product.id) do %>
						<%= attachment_image_tag product, :product_image, :fill, 100, 100 %>
					<% end %>
					</td>
					<td>
						<%= product.product_name %>　
					</td>
					<td>
						<%= product.tax_excluded %>円
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
