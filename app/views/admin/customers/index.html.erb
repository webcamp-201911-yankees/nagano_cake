<%= render 'layouts/a_header' %>
<h1>会員一覧画面</h1>

<table class="table table-hover">
  <tbody>
    <tr>
      <th>顧客ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td>
      <%= link_to admin_customer_path(customer.id) do %>
        <%= customer.last_name %> <%= customer.first_name %>
      <% end %>
      </td>
      <td><%= customer.email %></td>
      <td><%= customer.account_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>