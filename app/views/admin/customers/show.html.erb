<%= render 'layouts/a_header' %>
<h2>会員詳細画面</h2>

	<table>
		<tr>
			<td>顧客ID　</td>
			<td><%= @customer.id %></td>
			<!--<td>ステータス</td>-->
			<td class="badge badge-secondary"><%= @customer.account_status %>会員</td>
		</tr>
		<tr>
			<td>氏名　</td>
			<td><%= @customer.last_name %><%= @customer.first_name %></td>
		</tr>
		<tr>
			<td>フリガナ　</td>
			<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
		</tr>
		<tr>
			<td>郵便番号　</td>
			<td><%= @customer.zipcode %></td>
		</tr>
		<tr>
			<td>住所　</td>
			<td><%= @customer.address%></td>
		</tr>
		<tr>
			<td>電話番号　</td>
			<td><%= @customer.phone_number%></td>
		</tr>
		<tr>
			<td>メールアドレス　</td>
			<td><%= @customer.email%></td>
		</tr>
	</table>
	<%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-primary" %>
	<%= link_to '注文履歴一覧を見る', admin_order_histories_search_path(@customer.id), class: "btn btn-primary" %>