<%= render 'layouts/a_header' %>
<div class="container">
  <h1>商品一覧画面</h1>
  <%= link_to new_admin_product_path do %>
    <h1 class="fas fa-plus-circle"></h1>
  <% end %>
    <table class="table table-hover">
      <tbody>
        <tr>
          <th>商品</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
            <% @results.each do |product| %>
        <tr>
          <td><%=product.id%></td>
          <td>
          <%= link_to admin_product_path(product.id) do %>
            <%=product.product_name%>
          <% end %>
          </td>
          <td><%=product.tax_excluded%> 円</td>
          <td><%=product.category.name %></td>
          <td><%=product.sale_status%></td>
        </tr>
            <% end %>
      </tbody>
    </table>
</div>
