<%= render 'layouts/a_header' %>
<h1>商品詳細</h1>
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <%= attachment_image_tag @product, :product_image, :fill, 300,300, format: "jpeg", class: "pull-left profile-img", fallback: "no_image.jpg", :width => "300", :height => "300" %>
        </div>
        <div class="col-lg-8">
            <table>
                <tr>
                    <td>商品名</td>
                    <td>
                        <%= @product.product_name %>
                    </td>
                </tr>
                <tr>
                    <td>商品説明</td>
                    <td>
                        <%= @product.caption %>
                    </td>
                </tr>
                <tr>
                    <td>ジャンル</td>
                    <td>
                        <%= @product.category.name %>
                    </td>
                </tr>
                <tr>
                    <td>税込価格(税抜価格)</td>
                    <td>
                         <%= (@product.tax_excluded*1.1).floor %>
                        (<%= @product.tax_excluded %>)　円
                    </td>
                </tr>
                <tr>
                    <td>販売ステータス</td>
                    <td class="badge badge-secondary">
                        <%=@product.sale_status%>
                    </td>
                </tr>
            </table>
                <%= link_to '編集する', edit_admin_product_path(@product.id), class: "btn btn-primary" %>
        </div>
    </div>
</div>