                        <li>
                            <%= link_to destroy_customer_session_path, method: :delete, class: "btn-block" do %><span class="glyphicon glyphicon-edit" aria-hidden="true"> Logout</span>
                            <% end %>
                        </li>
                    </ul>
                    <% else %>
                    <ul class="nav navbar-nav navbar-right">
                        <!-- リンクのみ -->
                        <li>
                            <%= link_to new_customer_registration_path, class: 'btn-block' do %><span class="glyphicon glyphicon-user" aria-hidden="true"> Guest</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to new_customer_registration_path, class: 'btn-block' do %><span class="glyphicon glyphicon-edit" aria-hidden="true"> Sign-up</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to new_customer_session_path, class: 'btn-block' do %><span class="glyphicon glyphicon-log-in" aria-hidden="true"> Login</span>
                            <% end %>
                        </li>
                    </ul>
                    <% end %>
