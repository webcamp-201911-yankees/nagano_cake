   <nav class="navbar-inverse">
        <!-- //navbarを加えると、枠が丸くなる -->
        <div class="container-fluid">
            <header>
                <div class="navbar">
                    <div class="navbar-brand">
                    <%= link_to products_path do %>
                        <p>ながのCAKE</p>
                    <% end %>
                    </div>
                    <% if  customer_signed_in? %>
                    <!-- 右寄せになる部分 ================ -->
                    <ul class="nav navbar-nav navbar-right">
                        <!-- リンクのみ -->
                        <li>
                            <%= link_to customer_path(current_customer), class: 'btn-block' do %><span class="glyphicon glyphicon-user" aria-hidden="true">
                                <%= current_customer.last_name %>
                                <%= current_customer.first_name %>
                            </span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to carts_path, class: 'btn-block' do %><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"> Cart</span>
